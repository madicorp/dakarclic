<div class="modal fade  account-area" id="login-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div class="login-reg">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h2>Connexion</h2>
              <div class="form-group">
                <%= f.label :email, :class=>'control-label' %>
                <%= f.email_field :email, :class=>'form-control', :autofocus => true %>
              </div>
              <div class="form-group">
                <%= f.label :password, :class=>'control-label' %>
                <%= f.password_field :password, :class=>'form-control' %>
              </div>
            </div>
            <div class="frm-action">
              <div class="buttons common-btn chec">
                <%= f.submit "Connexion", :class => 'btn btn-primary', :dataLoadingText=>"Loading..." %>
              </div>
              <span>
                 <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me, :class=>'remr' %>
                    Remember me
                <% end -%>
              </span>
              <div class="forgotten">
                <%= @page = "login"
                    render "devise/shared/links" %>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
