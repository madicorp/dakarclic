<div class="modal fade account-area" id="signup-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="login-reg">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h2><%= t :sign_up %></h2>
              <div class="form-group">
                <%= f.label :name, "#{t :name_label }", :class=>"control-label" %>
                <%= f.text_field :name, :class=>"form-control", :placeholder=>"#{t :name_label }", autofocus: true, required: true %>
              </div>
              <div class="form-group">
                <%= f.label :username, "#{t :username_label }", :class=>"control-label" %>
                <%= f.text_field :username, :class=>"form-control", :placeholder=>"#{t :username_label }", required: true %>
              </div>
              <div class="form-group">
                <%= f.label :email, "#{t :email_label }", :class=>"control-label" %>
                <%= f.email_field :email, :class=>"form-control", :placeholder=>"#{t :email_label }", required: true%>
              </div>
              <div class="form-group">
                <%= f.label :password, "#{t :password_label }", :class=>"control-label" %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> <%= t(:charmin)%></em>
                <% end %><br />
                <%= f.password_field :password, :class=>"form-control", :placeholder=>"#{t :password_label }", autocomplete: "off", required: true %>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, "#{t :passwordconfirm_label }", :class=>"control-label" %>
                <%= f.password_field :password_confirmation, :class=>"form-control", :placeholder=>"#{t :passwordconfirm_label }", autocomplete: "off", required: true %>
              </div>
              <div class="form-group">
                <%= f.label :phone_number, "#{t :phone_number_label }", :class=>"control-label" %>
                <%= f.text_field :phone_number, :class=>"form-control", :placeholder=>"#{t :phone_number_label }", required: true %>
              </div>
            </div>
            <div class="frm-action">
              <div class="buttons common-btn chec">
                <%= f.submit  "#{t :btnsignup }", :class => 'btn btn-primary', :dataLoadingText=>"Loading..."%>
              </div>
              <div class="forgotten">
                <%= @page = "register"
                    render "devise/shared/links" %>
              </div>
            </div>
        <% end %>
    </div>
  </div>
</div>
