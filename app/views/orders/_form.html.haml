= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
  -else
    =form_for @order, :url => { :action => "create"} do |f|
      #accordion.panel-group.pb60{"aria-multiselectable" => "true", :role => "tablist"}
        .panel.super-accordion
          #headingsix.panel-heading{:role => "tab"}
            %h4.panel-title
              %a.collapsed{"aria-controls" => "confirm-order", "aria-expanded" => "false", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#confirm-order"}
                Detail Order
                %span
                  %i.fa.fa-caret-down
          #confirm-order.panel-collapse.collapse{"aria-labelledby" => "headingsix", :role => "tabpanel"}
            .panel-body
              .table-responsive
                %table.table.table-bordered
                  %tbody
                    %tr
                      %td.model Prix à l'unité
                      %td
                        %span.price 100 F CFA
                      %td.align-right
                        .cart-quantity
                          .product-quantity
                            .cart-quantity
                              .cart-plus-minus
                                .dec.qtybutton -
                                =f.text_field :quantity , class: "cart-plus-minus-box"
                                .inc.qtybutton +
                .tfoot.cart-total
                  %table.table.table-hover
                    %tbody
                      %tr
                        %td.left
                          %b Sub-Total:
                        %td.right.s_total
                          = @order.total_ht
                          %em F CFA
                      %tr
                        %td.left
                          %b VAT (18%):
                        %td.right.tva
                          = @order.total_ttc - @order.total_ht
                          %em F CFA
                      %tr
                        %td.left.last
                          %b Total:
                        %td.right.total.last
                          = @order.total_ttc
                          %em F CFA
              .buttons.common-btn
                %input.btn.btn-primary{"data-loading-text" => "Loading...", :type => "button", :value => "Confirm Order"}/
        .panel.super-accordion
          #headingfive.panel-heading{:role => "tab"}
            %h4.panel-title
              %a.collapsed{"aria-controls" => "payment-information", "aria-expanded" => "false", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#payment-information"}
                Payment Information
                %span
                  %i.fa.fa-caret-down
          #payment-information.panel-collapse.collapse{"aria-labelledby" => "headingfive", :role => "tabpanel"}
            .panel-body
              .row
                .col-sm-12.col-xs-12
                  %fieldset#pay-info.required
                    .content-info
                      .checkout-option
                        %form{:action => "#"}
                          .method-input-box
                            %p
                              %input{:name => "payment", :type => "radio", :value => "check"}/
                              %label Check / Money order
                            %p
                              %input{:checked => "checked", :name => "payment", :type => "radio", :value => "card"}/
                              %label Credit Card (saved)
                            .buttons.common-btn
                              %input.btn.btn-primary{"data-loading-text" => "Loading...", :type => "button", :value => "Continue"}/
  .actions
    = f.submit 'Save'
