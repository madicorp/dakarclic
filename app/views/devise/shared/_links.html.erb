<%- if controller_name != 'sessions' && @page.nil? || @page == "register" %>
  <%= link_to t(:sign_in), "#login-modal", "data-toggle" => "modal",  "data-dismiss" => "modal" , "data-page" => @page %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations'  && @page.nil? || @page == "login" %>
  <%= link_to t(:sign_up), "#signup-modal", "data-toggle" => "modal", "data-dismiss" => "modal" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && @page.nil? || @page == "login" %>
  <%= link_to t(:forgotpass), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(:dontreceiveconfirm), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(:dontreceiveunlock), new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to t(:sign_in_with) +"#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
