-unless @product.has_auction?

  %h2 Put this product to auction

  =form_for [@product, Auction.new] do |f|
    %p
      =f.label :value
      =f.text_field :value
    %p
    =f.label "Value to inc"
    =f.text_field :valueinc
    %p
    =f.label "Time to inc"
    =f.text_field :timeinc
    %p
      =f.datetime_select :ends_at
      =f.button class: "btn btn-primary"
