-if current_user
  .account-area.pb60.mt60
    .container
      .row
        .col-sm-9.col-xs-12.col-sm-offset-2
          = form_for(@submission) do |f|
            = render 'errors', object: @submission
            .login-reg
              .form-group
                = f.label :image
                = f.file_field :image, class: 'form-control', :placeholder=>"Choisissez un fichier"
              .form-group
                = f.label :description
                %br/
                = f.text_area :description, :class=>"form-control", :placeholder=>"Description", autofocus: true
              .form-group
                = f.label :contact
                %br/
                = f.text_area :contact, :class=>"form-control", :placeholder=>"Contact", autofocus: true
            .frm-action
              .buttons.common-btn.chec
                = f.submit "Valider", :class=>"btn btn-primary", :dataLoadingText=>"Loading..."
