.best-deals-area.pt60#online
  .row
    .col-md-12
      .title
        %h1 Enchères à venir
      .pull-right
        .btn.seemore
          =link_to "Plus" , "#"
  .row.row-padd
    - @auctionComing.each do |auction|
      .col-padd-custom
        .av_title= auction.product.name
        .av_image
          .center
            %a.image{:href => "#"}
              =image_tag auction.product.image ,class: "style_image_auction"
        .av_timer
          .timer_alert{"data-countdown" => auction.auction_close}
        .av_price
          .price{"data-productid" => auction.product.id} #{auction.value} FCFA
        .center
          -if !current_user
            %a.white{:href => "#login-modal", :title => "GO" , "data-toggle" => "modal", class: "btngo" }
              GO
          -else
            =link_to "GO", auction, :title => "GO" , class: "btngo coming"
